<div ng-controller = "addSensorCtrl">

	<div class="alert alert-success col-md-12" id="success-alert1" style="display: none ">
	<center> <strong> Successfully added the sensor</strong></center>
	</div>
	
	<div class="alert alert-danger col-md-12" id="success-alert2" style="display: none ">
	<center> <strong> Sorry, actual sensor is not present in the location entered</strong></center>
	</div>
	
	<div class="alert alert-danger col-md-12" id="failure-alert" style="display: none ">
	<center> <strong> Error while adding the sensor. Please try again </strong></center>
	</div>

<div class="hold-transition skin-blue sidebar-mini">
  <div>
    <section class="content">
	<div class="row">
		<div class="col-lg-5 col-xs-5">
		</div>
		<div class="col-lg-4 col-xs-4">
			<h1> ADD SENSOR </h1>
			<br>
		</div>
		<div class="col-lg-4 col-xs-4">
		</div>
	</div>
	<form>
      <div class="row ">
	  <section>
	  <div class="col-lg-3 col-xs-3">
	  </div>
	  		<div class="col-lg-2 col-xs-2">
			<label>Sensor Name</label> 							
		</div>
		<div class="col-lg-4 col-xs-4">
			<input class="form-control" type="text" id="sensorName" name="sensorName" placeholder="Sensor Name" ng-model="sensorName" required />												
		</div>
		</section>
		</div>		
	 
	    <hr/>
		<div class="row">
		<div class="col-lg-3 col-xs-3">
	  </div>
		<div class="col-lg-2 col-xs-1">
			<label>Description</label> 									
		</div>
		<div class="col-lg-4 col-xs-4">
			<input class="form-control" type="text" id="description" name="description" placeholder="Description" ng-model="description" required />
		</div>	
		</div>
	
		 <hr/>
		 
		 <div class="row">
		 	<div class="col-lg-3 col-xs-3">
		 	</div>
		 	<div class="col-lg-2 col-xs-2">
		 		<label>Sensor Type</label> 									
		 	</div>
			<div class="col-lg-4 col-xs-4">
				<input class="form-control" type="text" id="sensorType" name="sensorType" placeholder="Enter type of the sensor" ng-model="sensorType" required />
			</div>
	</div>
	<hr/>
	
	 <div class="row">
	 	<div class="col-lg-3 col-xs-3">
	 	</div>
	 	<div class="col-lg-2 col-xs-2">
	 		<label>Latitude</label> 									
	 	</div>
		<div class="col-lg-4 col-xs-4">
			<input class="form-control" type="text" id="latitude" name="latitude" placeholder="Enter the Latitude" required />
		</div>
</div>
<hr/>

<div class="row">
	<div class="col-lg-3 col-xs-3">
	</div>
	<div class="col-lg-2 col-xs-2">
		<label>Longitude</label> 									
	</div>
<div class="col-lg-4 col-xs-4">
	<input class="form-control" type="text" id="longitude" name="longitude" placeholder="Enter the Longitude" required />
</div>
</div>
<hr/>

<div class="row">
<div class="col-lg-3 col-xs-3">
	  </div>
		<div class="col-lg-2 col-xs-2">
			<label>Sensor Status (On / Off)</label> 									
		</div>
		<div class="col-lg-2 col-xs-2">
		
		<div class="radio">
		  <label><input type="radio" name="activate" id="active" value="active" ng-model="activate" checked/>Active</label>
		</div>
		
		</div>
		
<div class="col-lg-2 col-xs-2">
		
		
		<div class="radio">
		  <label><input type="radio" name="activate" id="inactive" value="inactive" ng-model="activate"/>Inactive</label>
		</div>
		
		</div>
		
	</div>
<hr/>

<div class="row">
<div class="col-lg-3 col-xs-3">
	  </div>
		<div class="col-lg-2 col-xs-2">
			<label>Sensor Location</label> 									
		</div>
		<div class="col-lg-4 col-xs-4">
			<input class="form-control" type="text" id="location" name="location" placeholder="Enter the location" ng-model="location" required />
		</div>						
	</div>
<hr/>

<div class="row">

		<div class="col-lg-4 col-xs-4">
		</div>
		<div class="col-lg-4 col-xs-4">
		</div>
		<div class="col-lg-4 col-xs-4">
			<input type="submit" class="btn btn-primary" value="SUBMIT" ng-click="addSensor()"></input>
		</div>
		<div class="col-lg-4 col-xs-4">
		</div>
	</div>
	</form>
<hr/>
	
		 
</section>		 
	</div>
</div>
</div>  
</div>
		
		
